@model LidavBankProj.Models.VInOutTransaction

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<h4>Incoming  Transactions</h4>

<table class="table">
    <tr>
        <th>
            Account ID
        </th>
        <th>
            From
        </th>
        <th>
            Amount
        </th>
        <th>
            Date
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.incoming) { 
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.SrcAccount.AccountId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SrcAccount.ApplicationUser.UserName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Amount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Time)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id=item.TransactionId })
        </td>
    </tr>
}

</table>


<h4>Outgoing Transactions</h4>

<table class="table">
    <tr>
        <th>
            Account ID
        </th>
        <th>
            To
        </th>
        <th>
            Amount
        </th>
        <th>
            Date
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.outgoing)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DstAccount.AccountId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DstAccount.ApplicationUser.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Time)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.TransactionId }) 
            </td>
        </tr>
    }

</table>

